<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/notice"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:background="@drawable/list_item_bg_pressed"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/widget_album"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:clickable="true"
        android:contentDescription="这是专辑图片"
        android:longClickable="true"
        android:src="@mipmap/ic_launcher_round" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="116dp"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/widget_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/widget_artist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:ellipsize="marquee"
                    android:gravity="center"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/widget_play"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/imagebutton_selector"
                android:clickable="true"
                android:longClickable="true"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_play_btn_play" />

            <ImageView
                android:id="@+id/widget_next"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/imagebutton_selector"
                android:clickable="true"
                android:longClickable="true"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_play_btn_next" />

            <ImageView
                android:id="@+id/widget_close"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="right"
                android:layout_marginLeft="7dp"
                android:layout_weight="0.7"
                android:background="@drawable/imagebutton_selector"
                android:clickable="true"
                android:longClickable="true"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/is_delete" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>
